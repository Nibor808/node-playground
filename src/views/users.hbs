<div class="users-wrapper">
  <div class="row">
    <div class="col-md-12">
      <h2>The Playground Users</h2>
      <div class="playground-users">
        <ul>
          {{#each users}}
            {{#ifGreater age 40 }}
              <li>{{id}} | {{name}} is {{age}} and shouldn't be on the playground <button type="button" class="remove">Remove</button></li>
            {{else}}
              <li>{{id}} | {{name}} is {{age}}. Have Fun!! <button type="button" class="remove">Remove</button></li>
            {{/ifGreater}}
          {{/each}}
        </ul>
      </div>
      <div class="buttons">
        <input type="text" name="user[name]" placeholder="name" />
        <input type="text" name="user[age]" placeholder="age" />
        <button type="button" class="test-btn">ADD USER</button>
      </div>
    </div>
  </div>
</div>
